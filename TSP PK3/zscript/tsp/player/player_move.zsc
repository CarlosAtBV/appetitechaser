Extend Class TSP_PlayerPawn_ZSCBase
{	
	override void MovePlayer ()
	{
		if(pp_hitFreeze>0)
		{
			A_SetAngle(angle-1,0);
			A_SetAngle(angle+1,SPF_INTERPOLATE);
			A_SetPitch(pitch-1,0);
			A_SetPitch(pitch+1,SPF_INTERPOLATE);
			return;
		}
		
		super.MovePlayer();
	}	
	
	override void CheckPitch()
	{
		if(pp_hitFreeze>0)
		{
			return;
		}
		super.CheckPitch();
	}
}